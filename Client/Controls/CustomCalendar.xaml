<UserControl x:Class="Client.Controls.CustomCalendar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="20" d:DesignWidth="300">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <TextBox Name="DateCtrl" MinWidth="20"/>
            <TextBlock Text="."/>
            <TextBox Name="MonthCtrl" MinWidth="20"/>
            <TextBlock Text="."/>
            <TextBox Name="YearCtrl" MinWidth="40"/>
            <TextBlock Text="Cet" Margin="5,0,0,0"/>
        </StackPanel>
    </Grid>
</UserControl>
